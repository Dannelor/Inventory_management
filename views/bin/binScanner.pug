extends ../layout

block content
    script(src="/js/quagga.min.js")
    div(id="scannerStream")
    script.
        Quagga.init({
            inputStream : {
                name : "Live",
                type : "LiveStream",
                target: document.querySelector('#scannerStream')    // Or '#yourElement' (optional)
            },
            decoder : {
                readers : ["upc_reader"]
            }
        }, function(err) {
            if (err) {
                console.log(err);
                return
            }
            console.log("Initialization finished. Ready to start");
            Quagga.start();
        });

        Quagga.onDetected(function(data){
            window.location = '../../additem/' + #{binID} + "/" + data.codeResult.code
            Quagga.stop()
        })