extends ../layout

block content
  div(class="row")
    div(class="col-sm-2")
        form(action="/bin/additem/update" method="post")
            input(type="hidden" name="itemUPC" value=UPC)
            input(type="hidden" name="itemBin" value=binID)
            div(class="form-group")
                label(for="itemQuantity") Item Quantity
                input(type="number" class="form-control" name="itemQuantity" value=itemQuantity)
            div(class="text-center")
                button(type="submit" class="btn btn-primary") Confirm