{
  "name": "inventory-management",
  "version": "0.0.0",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node ./bin/www",
    "devstart": "nodemon ./bin/www",
    "test": "mocha --recursive --exit --timeout 15000",
    "document": "apidoc -i ./routes/"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "!(doc)/*.{js,json}": [
      "pretty-quick --write --no-semi --single-quote",
      "git add",
      "npm test",
      "apidoc -i ./routes/"
    ]
  },
  "apidoc": {
    "title": "Inventory Management",
    "url": "http://localhost"
  },
  "dependencies": {
    "cookie-parser": "~1.4.3",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "http-errors": "~1.6.2",
    "morgan": "~1.9.0",
    "pug": "2.0.0-beta11"
  },
  "devDependencies": {
    "apidoc": "^0.17.7",
    "chai": "^4.2.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.3",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.9",
    "prettier": "1.16.4",
    "pretty-quick": "^1.10.0",
    "supertest": "^3.4.2"
  }
}
